<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  <object class="GtkWindow" id="window">
    <property name="can-focus">0</property>
    <property name="child">
      <object class="GtkBox">
        <property name="can-focus">0</property>
        <property name="vexpand">1</property>
        <property name="orientation">vertical</property>
        <child>
          <object class="AdwViewStack" id="main_stack">
            <property name="vexpand">1</property>
            <property name="can-focus">0</property>
            
            <child>
              <object class="AdwViewStackPage">
                <property name="name">feed_page</property>
                <property name="title" translatable="yes">Feed</property>
                <property name="child">
                  <object class="GtkScrolledWindow">
                    <property name="child">
                      <object class="GtkViewport">
                        <property name="can-focus">0</property>
                        <property name="child">
                          <object class="GtkListBox" id="feed_box">
                            <property name="can-focus">0</property>
                          </object>
                        </property>
                      </object>
                    </property>
                  </object>
                </property>
              </object>
            </child>
            
            <child>
              <object class="AdwViewStackPage">
                <property name="name">subs_page</property>
                <property name="title" translatable="yes">Subs</property>
                <property name="child">
                  <object class="GtkScrolledWindow">
                    <property name="child">
                      <object class="GtkViewport">
                        <property name="can-focus">0</property>
                        <property name="child">
                          <object class="GtkBox">
                            <property name="can-focus">0</property>
                            <property name="orientation">vertical</property>
                            <child>
                              <object class="GtkButton">
                                <property name="label">gtk-add</property>
                                <property name="receives-default">1</property>
                              </object>
                            </child>
                            <child>
                              <object class="GtkListBox" id="sub_box">
                                <property name="can-focus">0</property>
                              </object>
                            </child>
                          </object>
                        </property>
                      </object>
                    </property>
                  </object>
                </property>
              </object>
            </child>
            
            <child>
              <object class="AdwViewStackPage">
                <property name="name">player_page</property>
                <property name="title" translatable="yes">Player</property>
                <property name="child">
                  <object class="GtkScrolledWindow">
                    <property name="child">
                      <object class="GtkViewport">
                        <property name="can-focus">0</property>
                        <property name="child">
                          <object class="GtkBox">
                            <property name="can-focus">0</property>
                            <property name="orientation">vertical</property>
                            
                            <child>
                              <object class="GtkBox" id="player_box">
                                <property name="receives-default">0</property>
                                <property name="vexpand">1</property>
                              </object>
                            </child>
                            
                            <child>
                              <object class="GtkButton" id="player_play_button">
                                <property name="receives-default">0</property>
                                <property name="vexpand">0</property>
                                <property name="label">Play</property>
                              </object>
                            </child>
                            
                          </object>
                        </property>
                      </object>
                    </property>
                  </object>
                </property>
              </object>
            </child>
            
          </object>
        </child>
        <child>
          <object class="AdwViewSwitcherBar" id="bottom_switcher">
            <property name="visible">True</property>
            <property name="can-focus">False</property>
            <property name="stack">main_stack</property>
          </object>
        </child>
      </object>
    </property>
    <child type="titlebar">
      <object class="AdwHeaderBar">
        <property name="visible">True</property>
        <property name="can-focus">False</property>
        <property name="hexpand">True</property>
        <property name="centering-policy">strict</property>
        <child type="title">
          <object class="AdwSqueezer" id="squeezer">
            <property name="visible">True</property>
            <property name="can-focus">False</property>
            <property name="halign">center</property>
            <property name="valign">center</property>
            <property name="vexpand">True</property>
            <property name="homogeneous">True</property>
            <child>
              <object class="AdwViewSwitcher" id="headerbar_switcher">
                <property name="visible">True</property>
                <property name="can-focus">False</property>
                <property name="halign">center</property>
                <property name="valign">center</property>
                <property name="hexpand">True</property>
                <property name="stack">main_stack</property>
              </object>
            </child>
            <child>
              <object class="GtkLabel">
                <property name="can-focus">0</property>
                <property name="label" translatable="yes">Youtube</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </object>
</interface>
